<!DOCTYPE html>
<html>
  <head>
    <title>MultiDatabase</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "注销", destroy_user_session_path, method: :delete, style: "float: right" %>
      <div class="clearfix"></div>
      <br/>
    <% end %>
    <% if flash.present?%>
      <h3 class="<%= flash[:notice].present? ? 'notice' : 'error' %>"><%= flash[:notice] || flash[:error] %></h3>
    <% end %>
    <%= yield %>

  <style>
      .notice{
        background: green;
        text-align: center;
      }

      .error{
        background: red;
        text-align: center;
      }
  </style>
  </body>
</html>
